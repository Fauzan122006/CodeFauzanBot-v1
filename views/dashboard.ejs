            </div>
        </div>

        <!-- Features Grid -->
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-header">
                    <div class="feature-title">
                        <i class="fas fa-door-open"></i>
                        <h3>Welcome System</h3>
