            <div class="stat-card">
                <div class="stat-header">
                    <h3>Active Users</h3>
                    <div class="stat-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
                <div class="stat-value">342</div>
                <div class="stat-label">
                    <span class="stat-trend up"><i class="fas fa-arrow-up"></i> Online now</span>
