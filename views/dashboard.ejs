                <div class="feature-header">
                    <div class="feature-title">
                        <i class="fas fa-trophy"></i>
                        <h3>Leveling System</h3>
                    </div>
                    <label class="toggle-switch">
                        <input type="checkbox" checked>
                        <span class="slider"></span>
