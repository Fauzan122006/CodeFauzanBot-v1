                <a href="/dashboard/<%= guild.id %>/levels" class="feature-link">
                    Configure <i class="fas fa-arrow-right"></i>
                </a>
            </div>

            <div class="feature-card">
                <div class="feature-header">
                    <div class="feature-title">
                        <i class="fas fa-shield-alt"></i>
                        <h3>Auto Moderation</h3>
                    </div>
                    <label class="toggle-switch">
                        <input type="checkbox">
                        <span class="slider"></span>
                    </label>
                </div>
                <p class="feature-description">
                    Protect your server with automated moderation. Filter spam, bad words, and suspicious links.
                </p>
                <a href="/dashboard/<%= guild.id %>/automod" class="feature-link">
                    Configure <i class="fas fa-arrow-right"></i>
                </a>
            </div>

            <div class="feature-card">
                <div class="feature-header">
                    <div class="feature-title">
                        <i class="fas fa-user-tag"></i>
                        <h3>Role Management</h3>
                    </div>
                    <label class="toggle-switch">
                        <input type="checkbox" checked>
                        <span class="slider"></span>
                    </label>
                </div>
                <p class="feature-description">
                    Let members choose their own roles. Create categories and organize your server efficiently.
                </p>
